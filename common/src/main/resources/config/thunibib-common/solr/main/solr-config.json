  },
  {
    "add-requestHandler": {
      "name": "/search",
      "class": "solr.SearchHandler",
      "defaults": {
        "echoParams": "explicit",
        "defType": "edismax",
        "qs": "5",
        "mm": "100%",
        "q.alt": "*:*",
        "df": "all",
        "rows": 10,
        "fl": "id",
        "facet": "true",
        "facet.mincount": "1",
        "facet.field": [
          "status",
          "partOf",
          "importID",
          "year",
          "facet_person",
