[
  {
    "update-requestHandler": {
      "name": "/select",
      "class": "solr.SearchHandler",
      "defaults": {
        "echoParams": "explicit",
        "defType": "edismax",
        "qs": "5",
        "mm": "100%",
        "q.alt": "*:*",
        "df": "all",
        "rows": 10,
        "fl": "id",
        "facet": "true",
        "facet.mincount": "1",
        "facet.field": [
          "status",
          "partOf",
          "importID",
          "year",
          "facet_person",
          "connection_nid_text",
          "subject",
          "genre",
          "origin_exact",
          "facet_host_title",
          "oa",
          "fundingType"
        ],
        "wt": "xml"
      }
    }
  },
  {
    "update-requestHandler": {
      "name": "/statistics",
      "class": "solr.SearchHandler",
      "defaults": {
        "echoParams": "explicit",
        "defType": "edismax",
        "qs": "5",
        "mm": "100%",
        "q.op": "AND",
        "df": "all",
        "wt": "xml"
      },
      "appends": {
        "facet.field": [
          "year",
          "subject",
          "origin_exact",
          "genre",
          "oa",
          "facet_person",
          "connection_nid_text",
          "nid_connection"
        ],
        "json.facet": "{year:{type:terms,field:year,sort:{index:asc},facet:{oa:{type:terms,field:oa,sort:{index:asc}}}}}"
      },
      "invariants": {
        "fl": "",
        "start": "0",
        "rows": "0",
        "facet": "true",
        "facet.mincount": "1"
      }
    }
  },
  {
    "add-requestHandler": {
      "name": "/search-all",
      "class": "solr.SearchHandler",
      "defaults": {
        "echoParams": "explicit",
        "defType": "edismax",
        "qs": "5",
        "mm": "100%",
        "q.alt": "*:*",
        "df": "all",
        "rows": 10,
        "fl": "id",
        "facet": "true",
        "facet.mincount": "1",
        "facet.field": [
          "status",
          "partOf",
          "importID",
          "year",
          "facet_person",
          "connection_nid_text",
          "subject",
          "genre",
          "origin_exact",
          "facet_host_title",
          "oa",
          "fundingType"
        ],
        "wt": "xml"
      },
      "appends": {
        "fq": "+objectType:mods "
